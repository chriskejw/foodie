</head>

<body>

  <header>
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <a href="home"><img src="/image/logolong.png" class="logolong"></a>
            <li><a href="#">About</a></li>
            <li><a href="#">For Sale</a></li>
            <li><a href="#">For Rent</a></li>
            <li><a href="#">Landed</a></li>
            <li><a href="#">Condo</a></li>
            <li><a href="#">HDB</a></li>
            <li><a href="#">Neighbourhood</a></li>
            <li><a href="#">Guides</a></li>
            <li><a href="#">Contact</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <p class="navbar-text">Already have an account?</p>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><b>Login</b> <span class="caret"></span></a>
              <ul id="login-dp" class="dropdown-menu">
                <li>
                  <div class="row">
                    <div class="col-md-12">
                      <p>Login Information</p>

                      <form class="form" role="form" method="post" action="/home/login" accept-charset="UTF-8" id="login-nav">
                        <div class="form-group">
                          <label class="sr-only" for="exampleInputEmail2">Email address</label>
                          <input type="email" name="user[local][password]" class="form-control" id="exampleInputEmail2" placeholder="Email address" required>
                        </div>
                        <div class="form-group">
                          <label class="sr-only" for="exampleInputPassword2">Password</label>
                          <input type="password" name="user[local][password]" class="form-control" id="exampleInputPassword2" placeholder="Password" required>
                          <div class="help-block text-right"><a href="">Forgot your password?</a></div>
                        </div>
                        <div class="checkbox">
                          <label>
                         <input type="checkbox">Keep me logged-in
                         </label>
                        </div>
                        <div class="form-group">
                          <button type="submit" class="btn btn-primary btn-block">Log In</button>
                        </div>
                      </form>
                    </div>
                    <div class="bottom text-center">
                      New here? <a href="#"><b>Sign Up Now</b></a>
                    </div>
                  </div>
                </li>
              </ul>
            </li>
            <!-- signup -->
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><b>Sign Up</b> <span class="caret"></span></a>
              <ul id="login-dp" class="dropdown-menu">
                <li>
                  <div class="row">
                    <div class="col-md-12">
                      <p>Sign Up Information</p>
                      <form class="form" role="form" method="post" action="/home/signup" accept-charset="UTF-8" id="login-nav">
                        <div class="form-group">
                          <label class="sr-only" for="exampleInputEmail2">Username</label>
                          <input type="username" name="user[local][name]" class="form-control" id="exampleInputEmail2" placeholder="Username" required>
                        </div>
                        <div class="form-group">
                          <label class="sr-only" for="exampleInputEmail2">Email address</label>
                          <input name="user[local][email]" type="email" class="form-control" id="exampleInputEmail2" placeholder="Email address" required>
                        </div>
                        <div class="form-group">
                          <label class="sr-only" for="exampleInputPassword2">Password</label>
                          <input type="password" name="user[local][password]" class="form-control" id="exampleInputPassword2" placeholder="Password" required>
                          <div class="checkbox">
                            <label>
                           <input type="checkbox">I have read and agree to the <a href="">terms and conditions</a> of use.
                           </label>
                          </div>
                        </div>
                        <div class="form-group">
                          <button type="submit" class="btn btn-primary btn-block">Register</button>
                        </div>
                        <div class="bottom text-center">
                          A confirmation email will be sent to your email address upon successful registration.
                        </div>
                      </form>
                    </div>
                  </div>
                </li>
              </ul>
            </li>
          </ul>
        </div>
        <!-- /.navbar-collapse -->
      </div>
      <!-- /.container-fluid -->
    </nav>
  </header>

  <%- body %>

</body>

