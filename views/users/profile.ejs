<div class="pageHeaders">

  <div class="containerPosting" id="main">

    <div id="mySidenav" class="sidenav">
      <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
      <img src="https://s-media-cache-ak0.pinimg.com/736x/91/91/ba/9191ba989eed8d86a12fa75e84054e5b.jpg" class="img-square">
      <h3>Username: <b><%= user %></b></h3>
      <h5>Email: <b><%= email %></b><br></h5>
      <h5>Date Joined: <b><%= dateJoined %></b><br></h5>
      <a class="sideNavLink" href="/profile">My Profile</a>
      <a class="sideNavLink" href="/listings/search">Search</a>
      <a class="sideNavLink" href="/listings/new">Create</a>
      <br>
      <a class="sideNavLink" href="/logout">Logout</a>
    </div>

    <div id="main">
      <span class="openNav" style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776; profile</span>
    </div>


    <div class="allPosting">

      <% allListings.forEach(function(listing) { %>

        <section class="userPosting">
          <div class="row">
            <div class="span8">
              <h4><strong><a href="#"><%= listing.title %></a></strong></h4>
            </div>
          </div>
          <div class="row">
            <div class="span2">
              <a href="#" class="thumbnail">
                <img src="https://i.ytimg.com/vi/Xx6t0gmQ_Tw/maxresdefault.jpg" alt="">
              </a>
            </div>
            <div class="span6">
              <p>
                <%= listing.details %>
              </p>

              <div class="postButton btn-group">

                <form class="MoDe" action="/listings/<%= listing.id %>/modify">
                  <button type="submit" class="btn btn-primary btn-md btn-info">Modify</button>
                </form>

                <form class="MoDe" method="POST" action="/listings/profile/<%=listing.id%>" enctype="application/x-www-form-urlencoded">
                  <input type="hidden" name="_method" value="DELETE">
                  <button type="submit" class="btn btn-primary btn-md btn-danger">Delete</button>
                </form>

              </div>

            </div>

          </div>
          <hr>
          <div class="row">
            <div class="span8">
              <p>
                <i class="icon-user"></i> by <a href="#">Username</a> | <i class="icon-calendar"></i>Sept 16th, 2012 | <i class="icon-comment"></i> <a href="#">3 Enquiries</a> | <i class="icon-share"></i> <a href="#">39 Views</a> | <i class="icon-tags"></i>                Tags : <a href="#"><span class="label label-info">Snipp</span></a>
                <a href="#"><span class="label label-info">Bootstrap</span></a>
                <a href="#"><span class="label label-info">UI</span></a>
                <a href="#"><span class="label label-info">growth</span></a>
              </p>
            </div>
          </div>
          <hr>
        </section>

        <% }) %>

    </div>

  </div>

</div>
